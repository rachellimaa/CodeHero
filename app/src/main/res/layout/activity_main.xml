<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CharacterListActivity">

    <TextView
        android:id="@+id/text_title"
        style="@style/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        android:text="@string/text_title" />

    <LinearLayout
        android:layout_width="29dp"
        android:layout_height="2dp"
        android:layout_marginStart="45dp"
        android:background="#D42026"
        android:orientation="vertical" />

    <TextView
        android:id="@+id/text_search"
        style="@style/style_name_character"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="45dp"
        android:layout_marginTop="12dp"
        android:text="@string/string_character" />

    <EditText
        android:id="@+id/search"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="45dp"
        android:background="@drawable/shape_rounded" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:background="#D42026">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="114dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/robotoregular"
            android:text="@string/string_name"
            android:textColor="@android:color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView_character"
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        tools:itemCount="10"
        tools:listitem="@layout/item_character_list" />

    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/arrow_left"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/arrow_left" />

        <LinearLayout
            android:id="@+id/layout_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/first_page"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/selector_state_button"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/string_one"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="22sp" />

            <Button
                android:id="@+id/second_page"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_state_button"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/string_two"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="22sp" />

            <Button
                android:id="@+id/third_page"
                android:layout_width="38dp"
                android:layout_height="38dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/selector_state_button"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/string_three"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="22sp" />

        </LinearLayout>

        <ImageView
            android:id="@+id/arrow_right"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/arrow_right" />
    </LinearLayout>
</LinearLayout>